{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types"
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts"]
}